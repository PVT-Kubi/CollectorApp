<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CollectorApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CollectorApp"
    xmlns:v="clr-namespace:CollectorApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CollectorApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="CollectionItems"
        ContentTemplate="{DataTemplate v:CollectionItems}"
        Route="CollectionItems"/>

</Shell>
