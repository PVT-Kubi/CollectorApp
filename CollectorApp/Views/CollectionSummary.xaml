<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectorApp.Views.CollectionSummary"
             Title="CollectionSummary">
    <VerticalStackLayout BackgroundColor="#10454F">
        <Label x:Name="itemsCount" Margin="30,30,30,30" TextColor="#BDE038"/>
        <Label x:Name="selledCount" Margin="30,30,30,30" TextColor="#BDE038"/>
        <Label x:Name="toSellCount" Margin="30,30,30,30" TextColor="#BDE038"/>
        <Button Text="Return" Clicked="ReturnButtonClicked" Margin="30,30,30,30" />
    </VerticalStackLayout>
</ContentPage>